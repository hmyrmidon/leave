{% extends "::auth-base-layout.html.twig" %}
{% trans_default_domain 'FOSUserBundle' %}
{% block fos_user_content%}
    <div>
        <a class="hiddenanchor" id="signup"></a>
        <a class="hiddenanchor" id="signin"></a>

        <div class="login_wrapper">
            <div class="animate form login_form">
                <section class="login_content">
                    {% if error %}
                        <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                    {% endif %}
                    <form action="{{ path("fos_user_security_check") }}" method="post">
                        <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
                        <h1>{{ 'label.title.login'|trans({}, 'label') }}</h1>
                        <div class="form-group">
                            <input type="text" id="username" name="_username" value="{{ last_username }}" class="form-control" placeholder="{{ 'label.employee.username'|trans({}, 'label') }}" required="required" />
                        </div>
                        <div class="form-group">
                            <input type="password" id="password" name="_password" required="required" class="form-control" placeholder="{{ 'label.employee.password'|trans({}, 'label') }}" />
                        </div>
                        <div class="row">
                            <div class="col-xs-4">
                                <input type="submit" id="_submit" name="_submit" class="submit btn btn-dark btn-flat" value="{{ 'security.login.submit'|trans }}" />
                            </div><!-- /.col -->
                            <div class="col-xs-8">
                                <div class="checkbox icheck">
                                    <label class="pull-right">
                                        <input type="checkbox" id="remember_me" name="_remember_me" value="on" /> {{ 'security.login.remember_me'|trans }}
                                    </label>
                                </div>
                            </div><!-- /.col -->
                        </div>
                        <div class="form-group">
                            <a class="reset_pass" href="{{ url('fos_user_resetting_request') }}">Mot de passe oublié?</a><br>
                        </div>
                        <div class="clearfix">
                        </div>
                        <div class="separator">
                            <div class="clearfix"></div>
                            <div>
                                <h1><i class="fa fa-paw"></i> Bocasay_</h1>
                                <p>©2016 All Rights Reserved. Bocasay Team Agency. Privacy and Terms</p>
                            </div>
                        </div>
                    </form>
                </section>
            </div>
        </div>
    </div>
{% endblock fos_user_content%}