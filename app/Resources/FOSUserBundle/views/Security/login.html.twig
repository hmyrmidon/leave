{% extends "::auth-base-layout.html.twig" %}
{% trans_default_domain 'FOSUserBundle' %}
{% block fos_user_content%}
    <div>
        <a class="hiddenanchor" id="signup"></a>
        <a class="hiddenanchor" id="signin"></a>

        <div class="login_wrapper">
            <div class="animate form login_form">
                <section class="login_content">
                    {% if error %}
                        <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                    {% endif %}
                    <form action="{{ path("fos_user_security_check") }}" method="post">
                        <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
                        <h1>Login Form</h1>
                        <div>
                            <input type="text" id="username" name="_username" value="{{ last_username }}" class="form-control" placeholder="Username" required="required" />
                        </div>
                        <div>
                            <input type="password" id="password" name="_password" required="required" class="form-control" placeholder="Password" />
                        </div>
                        <div>
                            <input type="checkbox" id="remember_me" name="_remember_me" value="on" />
                            <label for="remember_me">{{ 'security.login.remember_me'|trans }}</label>
                        </div>

                        <div>
                            <input type="submit" class="btn btn-default submit" id="_submit" name="_submit" value="Log in"/>
                            <a class="reset_pass" href="#">Lost your password?</a>
                        </div>

                        <div class="clearfix">
                        </div>

                        <div class="separator">

                            <div class="clearfix"></div>

                            <div>
                                <h1><i class="fa fa-paw"></i> Bocasay_</h1>
                                <p>Â©2016 All Rights Reserved. Bocasay Team Agency. Privacy and Terms</p>
                            </div>
                        </div>
                    </form>
                </section>
            </div>
        </div>
    </div>
{% endblock fos_user_content%}