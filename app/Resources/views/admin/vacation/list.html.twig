{% extends '::admin-base-layout.html.twig' %}

{% block stylesheet %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('plugins/datatables.net-bs/css/dataTables.bootstrap.min.css') }}">
    <link rel="stylesheet" href="{{ asset('plugins/datatables.net-buttons-bs/css/buttons.bootstrap.min.css') }}">
    <link rel="stylesheet" href="{{ asset('plugins/datatables.net-fixedheader-bs/css/fixedHeader.bootstrap.min.css') }}">
    <link rel="stylesheet" href="{{ asset('plugins/datatables.net-responsive-bs/css/responsive.bootstrap.min.css') }}">
    <link rel="stylesheet" href="{{ asset('plugins/datatables.net-scroller-bs/css/scroller.bootstrap.min.css') }}">
{% endblock stylesheet %}
{% block page_content %}
    <div class="right_col" role="main">
        <div class="page-title">
            <div class="title_left">
                <h3>Demande de congés</h3>
            </div>
        </div>
        <div class="clearfix"></div>
        <div class="row">
            <div class="col-md-12 col-sm-12 col-xs-12">
                <div class="x_panel">
                    <div class="x_title">
                        <h2>Liste des demandes à valider <span class="badge bg-green" style="color: white">{{ vacations|length }}</span></h2>
                        <ul class="nav navbar-right panel_toolbox">
                            <li><a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                            </li>
                            <li><a class="close-link"><i class="fa fa-close"></i></a>
                            </li>
                        </ul>
                        <div class="clearfix"></div>
                    </div>
                    <div class="x_content">
                        {% for label, flashes in app.session.flashbag.all %}
                            <div class="callout callout-{{ label }} alert alert-{{ label }} alert-dismissable">
                                <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
                                {% for flash in flashes %}
                                    <p>{{ flash|trans({}, 'messages') }}</p>
                                {% endfor %}
                            </div>
                        {% endfor %}
                        <table id="datatable-responsive" class="table table-striped table-bordered dt-responsive nowrap bulk_action" cellspacing="0" width="100%">
                            <thead>
                            <tr>
                                <th><input type="checkbox" id="check-all" class="flat"></th>
                                <th>Nom</th>
                                <th>Prénoms</th>
                                <th>Equipe</th>
                                <th>Date de début</th>
                                <th>Date de retour</th>
                                <th>Nombre de jour</th>
                                <th>Motif</th>
                                <th>Statut</th>
                                <th></th>
                            </tr>
                            </thead>
                            <tbody>
                                {% for item in vacations %}
                                    <tr>
                                        <td><input type="checkbox" class="flat" name="table_records"></td>
                                        <td>{{ item.employee.lastname }}</td>
                                        <td>{{ item.employee.firstName }}</td>
                                        <td>{{ item.employee.team.name }}</td>
                                        <td>{{ item.startDate|date('d/m/Y') }}</td>
                                        <td>{{ item.endDate|date('d/m/Y') }}</td>
                                        <td>{{ item.startDate|dayCount(item.endDate) }}</td>
                                        <td>{{ item.reason }}</td>
                                        <td>{{ item.status|status|raw }}</td>
                                        <td>
                                            {{ addButton('fa fa-check fa-lg', path('app_vacation_validate', {id: item.id}), 'activate', 'success')|raw }}
                                        </td>
                                    </tr>
                                {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock page_content %}

{% block javascript %}
    {{ parent() }}
    <script src="{{ asset('plugins/datatables.net/js/jquery.dataTables.js') }}"></script>
    <script src="{{ asset('plugins/datatables.net-bs/js/dataTables.bootstrap.min.js') }}"></script>
    <script src="{{ asset('plugins/datatables.net-buttons/js/dataTables.buttons.min.js') }}"></script>
    <script src="{{ asset('plugins/datatables.net-fixedheader/js/dataTables.fixedHeader.min.js') }}"></script>
    <script src="{{ asset('plugins/datatables.net-responsive/js/dataTables.responsive.min.js') }}"></script>
    <script src="{{ asset('plugins/datatables.net-scroller/js/dataTables.scroller.min.js') }}"></script>
    <script src="{{ asset('plugins/datatables.net-responsive-bs/js/responsive.bootstrap.js') }}"></script>
    <script>
        var datatable = $('#datatable-responsive')
        datatable.dataTable({
             'order': [[ 1, 'asc' ]],
             'columnDefs': [
                 { orderable: false, targets: [0] },
                 { orderable: false, targets: [$('#datatable-responsive th').length-1] }
             ]
        });
        $datatable.on('draw.dt', function() {
            $('input').iCheck({
                checkboxClass: 'icheckbox_flat-green'
            });
        });
    </script>
{% endblock javascript %}