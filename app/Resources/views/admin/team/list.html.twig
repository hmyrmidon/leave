{% extends '::admin-base-layout.html.twig' %}
{% block title_content %}
    {{ parent() }} - Utilisateur
{% endblock title_content %}
{% block modal_body_content %}
    {{ 'message.confirm.delete.team'|trans({}, 'messages') }}
{% endblock modal_body_content %}
{% block page_content %}
    <div class="right_col" role="main">
        <div class="">
            <div class="page-title">
                <div class="title_left">
                    <h3>Equipes</h3>
                </div>
            </div>
            <div class="clearfix"></div>
            <div class="row">
                <div class="col-md-12 col-sm-12 col-xs-12">
                    <div class="x_panel">
                        <div class="x_title">
                            <h2>Liste des équipes</h2>
                                <div class="box-tools pull-right">
                                    <a href="{{ path('app_team_create') }}" class="btn btn-success btn-xs"><i class="fa fa-plus"></i></a>
                                </div>
                            <div class="clearfix"></div>
                        </div>
                        <div class="x_content">
                            <br />
                                <table id="team-list" class="table table-striped table-bordered dt-responsive" cellspacing="0" width="100%">
                                    <thead>
                                        <tr>
                                            <th>Nom de l'équipe</th>
                                            <th class="no-sort">Action</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        {% for team in teams %}
                                            <tr>
                                                <td>{{team.name}}</td>
                                                <td>
                                                    <a href="{{ path('app_team_edit', {'id': team.id}) }}" class="btn btn-dark btn-xs"><i class="fa fa-edit"></i></a>
                                                    <a href="#" data-url="{{ path('app_team_delete', {'id': team.id}) }}"  data-text="" data-toggle="tooltip" data-placement="left" class="btn-delete btn btn-danger btn-xs"><i class="fa fa-times"></i></a>
                                                </td>
                                            </tr>
                                        {% endfor %}
                                    </tbody>
                                </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock page_content %}
{% block javascript %}
    {{ parent() }}
    <script>
        $(document).ready(function() {
            $('#user-list').dataTable({
            "language": {
                        "url": '//cdn.datatables.net/plug-ins/1.10.11/i18n/French.json'
                    },
            "info": false,
            "order": [],
            "columnDefs": [
                { "targets": "no-sort", "orderable": false }
            ],
            "scrollX" : false
            });
        });
    </script>
{% endblock javascript %}

